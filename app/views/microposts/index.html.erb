<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table class='.w3-table-all'>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to 'Show', micropost, class:"w3-button w3-hover-sepia w3-light-green w3-text-white" %></td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost), class:"w3-button w3-hover-sepia w3-light-green w3-text-white" %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, class:"w3-button w3-hover-sepia w3-light-green w3-text-white", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropost', new_micropost_path, class:"w3-button w3-block w3-hover-sepia w3-light-green w3-text-white" %>
